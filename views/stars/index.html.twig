{% extends "layouts/base.html.twig" %}

{% block page_title %}View all Stars{%endblock%}

{%block app%}

<h1>View All Stars</h1>

<table>
    <thead>
        <tr>
            <td>ID#</td>
            <td>Name</td>
            <td>Size</td>
            <td>Description</td>
            <td>Image</td>
            <td>Actions</td>
        </tr>
    </thead>

    <tbody>
        {% for star in stars %}
        <tr>
            <td>{{star.id}}</td>
            <td>{{star.name}}</td>
            <td>{{star.size}}</td>
            <td>{{star.description ? star.description : "N/A"}}</td>
            <td>
                {% if star.imageUrl %}
                <img src="{{star.imageUrl}}" alt="{{star.name}}" style="width: 100px; height: 100px; object-fit: cover;">
                {% else %}
                No Image
                {% endif %}
            </td>
            <td>
                <a href="/stars/{{star.id}}">View</a> 
                |
                <a href="/stars/{{star.id}}/edit">Edit</a>
                |
                <a href="/stars/{{star.id}}/delete">Delete</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<p><a href="/stars/new">Create New Star</a></p>

{%endblock%}