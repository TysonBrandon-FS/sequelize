<html>
    <head>
        <title>{% block page_title %}ASL - TwigBase{%endblock%}</title>
        <style type="text/css">
            table, th, td {
                border: 1px solid black;
            }

            body {
                background: #181a1b;
                color: #f5f5f5;
                font-family: 'Segoe UI', Arial, sans-serif;
                margin: 0;
                padding: 0;
            }

            header, footer {
                background: #23272a;
                color: #fff;
                padding: 1rem 0;
                text-align: center;
            }

            nav ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                justify-content: center;
                gap: 2rem;
            }

            nav a {
                color: #1de9b6;
                text-decoration: none;
                font-weight: bold;
                transition: color 0.2s;
            }

            nav a:hover {
                color: #fff;
            }

            main#app {
                display: flex;
                flex-direction: column;
                align-items: center;
                min-height: 80vh;
                justify-content: flex-start;
                padding: 2rem 0;
            }

            h1, h2, h3 {
                color: #1de9b6;
                text-align: center;
                margin-bottom: 1rem;
            }

            table {
                border-collapse: collapse;
                width: 90vw;
                max-width: 900px;
                margin: 2rem auto;
                background: #23272a;
                color: #f5f5f5;
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0 2px 8px rgba(0,0,0,0.3);
            }

            th, td {
                border: 1px solid #333;
                padding: 0.75rem 1rem;
                text-align: center;
            }

            th {
                background: #1de9b6;
                color: #181a1b;
            }

            tr:nth-child(even) {
                background: #202225;
            }

            tr:hover {
                background: #263238;
            }

            a, button {
                color: #1de9b6;
                background: none;
                border: none;
                cursor: pointer;
                font-weight: bold;
                transition: color 0.2s;
            }

            a:hover, button:hover {
                color: #fff;
            }

            form {
                background: #23272a;
                padding: 2rem;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.3);
                margin: 2rem auto;
                width: 100%;
                max-width: 500px;
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }

            label {
                color: #1de9b6;
                font-weight: bold;
            }

            input[type='text'], input[type='number'] {
                padding: 0.5rem;
                border-radius: 4px;
                border: 1px solid #333;
                background: #181a1b;
                color: #f5f5f5;
                width: 100%;
            }

            button[type='submit'] {
                background: #1de9b6;
                color: #181a1b;
                padding: 0.75rem 1.5rem;
                border-radius: 4px;
                font-size: 1rem;
                font-weight: bold;
                margin-top: 1rem;
                transition: background 0.2s, color 0.2s;
            }

            button[type='submit']:hover {
                background: #009688;
                color: #fff;
            }

            img {
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.3);
                margin: 0.5rem 0;
                max-width: 100%;
                height: auto;
            }

            ul {
                padding: 0;
                margin: 1rem 0;
                list-style: none;
            }

            li {
                margin-bottom: 0.5rem;
            }
        </style>
    </head>

    <body>

        {% include "partials/_header.html.twig" %} 
       
        <main id="app">
            {% block app%}
            {% endblock%}
        </main>

        {% include "partials/_footer.html.twig" %}

        {% block scripts%}
        {% endblock%}
    </body>
</html>